@model IEnumerable<RollCallApplication.Models.EventGuest>

@{
    ViewBag.Title = "IndexOfCheckedInGuests";
}

<h2>Index Of Checked In Guests</h2>

<p>
    @Html.ActionLink("Create New", "RegisterGuest")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeOfCheckIn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preregistered)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOfCheckIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preregistered)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.GuestId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.GuestId })
            </td>
        </tr>
    }
</table>

<p>Total Guests checked in: @ViewBag.TotalGuests</p>
<p>Total Unique Guests checked in: @ViewBag.TotalUniqueGuests</p>
<p>@Html.ActionLink("Download Attendee List", "DownloadListAsCsv", "EventGuests")</p>
