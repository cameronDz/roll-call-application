@if (@ViewBag.EnteredWrongPasscode != null)
{
    <script>
        alert("Wrong passcode entered. Retry or return to Guest Check In.");
    </script>
}

<h2>@ViewBag.Title</h2>
<p>@ViewBag.Message</p>
<div class="container">
    @using (Html.BeginForm())
    {
        <div class=" row form-group">
            <input type="password" name="password" id="password" />
            <input type="submit" value="Enter Password" />
        </div>
    }
</div>
<br />
<p><a class="btn btn-default btn-lg" href=@Url.Action("Create","EventGuests")>Return to Guest Check In Page</a></p>
