@model IEnumerable<RollCallApplication.Models.EventGuest>
@if (ViewBag.SuccessfulCheckIn != null)
{
    <script>
        alert("Successfully checked into the event!")
    </script>
}
else if (ViewBag.FailedCheckIn != null)
{
    <script>
        alert("Unable to check into event. Please try again..")
    </script>
}
<div class="jumbotron">
    <h1>Welcome to the @ViewBag.EventName!!</h1>
</div>

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.FirstName).ToHtmlString(), "PreregisteredCheckInList", new { sortOrder = ViewBag.FirstNameSortParm })
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.LastName).ToHtmlString(), "PreregisteredCheckInList", new { sortOrder = ViewBag.LastNameSortParm })
        </th>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.Email).ToHtmlString(), "PreregisteredCheckInList", new { sortOrder = ViewBag.EmailSortParm })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @using (Html.BeginForm("PreregisteredCheckInList", "EventGuests", new { id = item.GuestId }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color">
                        @if (item.TimeOfCheckIn == null)
                        {
                            <input type="submit" value="Check In" class="btn btn-primary" />
                        }
                        else
                        {
                            <input type="submit" value="Re-Check In" class="btn btn-default" />
                        }
                    </div>
                }
            </td>
        </tr>
    }
</table>
